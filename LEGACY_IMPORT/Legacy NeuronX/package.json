{
  "name": "sales-os",
  "version": "0.1.0",
  "description": "A world-class sales operating system with AI-driven insights and automated workflows",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --cache --cache-location .cache/eslint",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix --cache --cache-location .cache/eslint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest run",
    "test:integration": "jest apps/core-api/src/rate-limit/__tests__/rate-limit.guard.spec.ts && jest apps/core-api/src/rate-limit/__tests__/webhook-ordering.spec.ts && jest apps/core-api/src/rate-limit/__tests__/rate-limit.redis.store.spec.ts && jest apps/core-api/src/rate-limit/__tests__/rate-limit.store.integration.spec.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:smoke": "playwright test tests/e2e/specs/smoke-test.spec.ts",
    "test:cypress": "cypress run",
    "test:cypress:open": "cypress open",
    "test:all": "node scripts/test-all.js",
    "validate:traceability": "tsx scripts/validate-traceability.ts",
    "validate:evidence": "tsx scripts/validate-evidence.ts",
    "ci": "pnpm run format:check && pnpm run lint && pnpm run typecheck && pnpm run validate:traceability && pnpm run validate:evidence && pnpm run test:coverage",
    "build": "pnpm -r --filter='./packages/**' build && pnpm -r --filter='./apps/**' build",
    "build:packages": "pnpm -r --filter='./packages/**' build",
    "build:apps": "pnpm -r --filter='./apps/**' build",
    "test:workspace": "pnpm -r test",
    "test:packages": "pnpm -r --filter='./packages/**' test",
    "test:apps": "pnpm -r --filter='./apps/**' test",
    "lint:all": "pnpm -r lint",
    "lint:packages": "pnpm -r --filter='./packages/**' lint",
    "lint:apps": "pnpm -r --filter='./apps/**' lint",
    "typecheck:all": "pnpm -r typecheck",
    "typecheck:packages": "pnpm -r --filter='./packages/**' typecheck",
    "typecheck:apps": "pnpm -r --filter='./apps/**' typecheck",
    "dev:core-api": "pnpm --filter=@neuronx/core-api start:dev",
    "dev:control-plane": "pnpm --filter=@neuronx/control-plane-api start:dev",
    "dev:ghl-adapter": "pnpm --filter=@neuronx/adapters-ghl-webhook start:dev",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "validate:observability-artifacts": "tsx scripts/validate-observability-artifacts.ts",
    "validate:config": "tsx scripts/validate-config.ts",
    "validate:migrations": "tsx scripts/validate-migrations.ts",
    "validate:release": "tsx scripts/validate-release.ts",
    "prepare": "husky",
    "dev": "pnpm --filter=@neuronx/core-api start:dev"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@nestjs/testing": "^11.1.11",
    "@playwright/test": "^1.40.0",
    "@types/js-yaml": "^4.0.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "playwright": "^1.40.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=22 <23",
    "pnpm": ">=9.0.0"
  },
  "dependencies": {
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  }
}
