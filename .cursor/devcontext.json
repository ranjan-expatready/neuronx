{
  "name": "NeuronX DevContext",
  "version": "1.0.0",
  "description": "Developer context indexing for NeuronX codebase",
  "index": {
    "include": [
      "docs/**/*",
      "apps/**/*",
      "packages/**/*",
      ".cursor/rules/**/*"
    ],
    "exclude": [
      "node_modules/**/*",
      "dist/**/*",
      "build/**/*",
      ".next/**/*",
      ".nuxt/**/*",
      "*.log",
      ".DS_Store",
      ".git/**/*"
    ]
  },
  "metadata": {
    "project": "NeuronX",
    "architecture": "Event-driven microservices",
    "stack": "NestJS + TypeScript + PostgreSQL",
    "patterns": [
      "Event Sourcing",
      "CQRS",
      "Tenant Isolation",
      "Adapter Pattern"
    ]
  }
}
